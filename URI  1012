#include<stdio.h>
int main()
{
    float A,B,C;
    double PI,tri,rad,tra,squ,rec;
    scanf("%f %f %f", &A,&B,&C);

    PI = 3.14159;
    tri = .5 * A * C;
    rad = PI * (C*C);
    tra = (A + B)/2 * C;
    squ = B * B;
    rec = A * B;

    printf("TRIANGULO: %.3lf\n",tri);
    printf("CIRCULO: %.3lf\n",rad);
    printf("TRAPEZIO: %.3lf\n",tra);
    printf("QUADRADO: %.3lf\n",squ);
    printf("RETANGULO: %.3lf\n",rec);




    return 0;
}
